{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "target": "ES2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "tmp",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "src/_old/index-old.ts",
        "src/_old/templates.ts",
        "converter/**/*.js",
        "editor/index.js"
    ],
    "lib": ["DOM", "ES2020"]
}
