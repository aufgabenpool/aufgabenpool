    <questionvariables>
      <text>/* Zufallszahlen */
a1:rand_with_step(2,5,1);
b1:rand_with_step(1,9,1);
a2:rand_with_step(6,9,1);
b2:rand_with_step(1,9,1);
a3:a1;
b3:rand_with_step(1,9,2);
a4:a2;
b4:rand_with_step(1,9,2);
x1:rand_with_step(1,9,1);
/* mögliche Antworten */
f1:a1*x^2+b1; 
f2:a2*x^2+b2; 
f3:a3*x^2+b3*x; 
f4:a4*x^2+b4*x; s1:ev(a1*h+2*a1*x1,simp);
s2:ev(a2*h+2*a2*x1,simp);
s3:ev(a3*h+2*a3*x1+b3,simp);
s4:ev(a4*h+2*a4*x1+b4,simp);
/* wähle richtige Antwort zufällig aus */
myterms:[[f1,s1], [f2,s2], [f3,s3], [f4,s4]];fshuffle:rand_selection(myterms, 4);
tshow:fshuffle[1][1];
tac:fshuffle[1][2];
/* alle Antwortmöglichkeiten */
ta: [[fshuffle[1][2], true], [fshuffle[2][2], false], [fshuffle[3][2], false], [fshuffle[4][2], false]];
ta:random_permutation(ta);
tao:[null, false, "Der korrekte Ausdruck ist hier nicht aufgelistet."];
ta:append(ta,[tao]);
/* Technik */
tafunc:maplist(first, ta);
tabool:maplist(second, ta);</text>
