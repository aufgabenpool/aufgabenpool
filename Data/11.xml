    </stackversion>
    <questionvariables>
      <text>/* Zufallszahlen */
z1:rand_with_step(360,36000,360);
p1:rand([2,4,12,24,120,360]);
z2:round(z1/p1);
/* mögliche Antworten */
a1:-1;
a2:-2;
a3:-1.5;
a4:-0.5;
f1:"Eine Erhöhung des Preises um 1 Euro senkt die Nachfrage um 2 Stück."; 
f2:"Eine Absenkung des Preises um 1 Euro erhöht die Nachfrage um 4 Stück.";
f3:"Eine Erhöhung des Preises um 1 Prozent senkt die Nachfrage um 3 Stück."; 
f4:"Eine Absenkung des Preises um 1 Prozent erhöht die Nachfrage um 1 Stück.";
s1:1;s2:2;s3:3;s4:4;
/* wähle richtige Antwort zufällig aus */
myterms:[[f1,s1,a1], [f2,s2,a2], [f3,s3,a3], [f4,s4,a4]];
fshuffle:rand_selection(myterms, 4);
tac:fshuffle[1][2];
t1:fshuffle[1][1];
/* alle Antwortmöglichkeiten */
ta: [[fshuffle[1][2], true, fshuffle[1][3]], [fshuffle[2][2], false, fshuffle[2][3]], [fshuffle[3][2], false, fshuffle[3][3]], [fshuffle[4][2], false, fshuffle[4][3]]];
ta:random_permutation(ta);
tao:[null, false, "Der korrekte Wert der Elastizität ist hier nicht aufgelistet."];
ta:append(ta,[tao]);
/* Technik */
tafunc:maplist(first, ta);
tabool:maplist(second, ta);</text>
